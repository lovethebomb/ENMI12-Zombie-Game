// admin/question.jade - main view
extends layout

block head
	script(src='/js/admin.js')

block title
	h1= title

block content
	div
		table.table.table-hover
			tr
				th Question
				th Answer
				th Active
				th Solved
				th Answered
				th Created at
			each question in questions
				tr
					td #{question.text}
					td #{question.answer}
					if question.active
						td #{question.active}
					else
						td 
							a(href='/admin/question/activate/#{question._id}') Activate

					td #{question.solved}
					td #{question.answered}
					td #{question.created_at}

	br
	div
		form(action="/admin/question/add", method="post")
			table(border="1") 
				tr
					td Question Text: 
					td 
						input(name="item[text]", type="textbox", placeholder="This is my question")
				tr
					td Question Answer: 
					td 
						select(name="item[answer]")
							option(value="1") Yes
							option(value="0") No
				
			input(type="submit", value="Add question")

	a(href='/admin/question/end') End game

		